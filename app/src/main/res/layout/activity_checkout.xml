<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintCircleRadius="10dp"
    tools:context=".CheckoutActivity">


    <TextView
        android:id="@+id/autoSpecTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin5dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/margin5dp"
        android:padding="@dimen/margin5dp"
        android:text="TextView"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/autoImageView"
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:layout_margin="@dimen/margin5dp"
        android:contentDescription="@string/CoverImageContentDesc"
        android:padding="@dimen/margin5dp"
        app:srcCompat="@drawable/auto_rental" />

    <TextView
        android:id="@+id/autoTypeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin5dp"
        android:layout_marginTop="@dimen/margin20dp"
        android:layout_marginRight="@dimen/margin5dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin5dp"
            android:layout_marginTop="@dimen/margin20dp"
            android:layout_marginRight="@dimen/margin5dp"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noOfDaysTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20dp"
            android:layout_marginTop="@dimen/margin20dp"
            android:layout_marginRight="@dimen/margin5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="no of days: " />

        <Spinner
            android:id="@+id/daySpinner"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin5dp"
            android:layout_marginTop="@dimen/margin20dp"
            android:layout_marginRight="@dimen/margin20dp"
            android:layout_weight="1"
            android:entries="@array/noOfDays" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/confirmButtonView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/margin20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="@string/confirmButtonVal"
            android:textAllCaps="false"
            android:textSize="@dimen/buttonTextSize" />
    </LinearLayout>




</LinearLayout>